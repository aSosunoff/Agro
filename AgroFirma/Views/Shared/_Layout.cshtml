        </div><!-- /.container-fluid -->
    </nav>

<div class="container user-container">
    @if (@ViewBag.Title != null)
    {
        <div class="row">
            <div class="col-lg-offset-3 col-lg-9">
                <h3>@ViewBag.Title</h3>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-lg-3 user-meny">
            <div class="panel panel-primary">
                <div class="panel-heading">Меню</div>
                <div class="panel-body">
                    @Html.Menu("List", "Catalog")
                </div>
            </div>

            <div class="panel panel-primary">
                <div class="panel-heading">Новости</div>
                <div class="panel-body">
                    @*@Html.Menu("List", "Catalog")*@
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">@ViewBag.ErrorMessage</div>
            }

            @RenderBody()
        </div>
        
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render(" ~/bundles/jsUser")
   
