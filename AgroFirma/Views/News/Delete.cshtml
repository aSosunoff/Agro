@model Model.rnews
@{
    ViewBag.Title = "Удаление новости";
}

<div class="list-group list-cust card-head">
    <h5 class="list-group-item active">Карточка новости</h5>
    <div class="col-lg-12 card-body">
        @using (Html.BeginForm("Delete", "News", null, FormMethod.Post, new {enctype = "multipart/form-data", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(e => e.PK_ID)
            @Html.HiddenFor(e => e.NAME)

            <div class="alert alert-danger">Вы уверены в удалении новости - @Model.NAME</div>
            <div class="form-group">
                <input type="submit" value="Да" class="btn btn-danger" />
            </div>
        }
    </div>
</div>
