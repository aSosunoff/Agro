@using AgroFirma.Component.Helpers
@model Model.Infrastructure.CategoryModel
@{
    ViewBag.Title = ViewBag.CategoryTitle;
}

@if (Model.Ccategories.Any())
{
    <div class="row">@* TODO: Вот это добавилось *@
        <div class="col-lg-12">@* TODO: Вот это добавилось *@
            <div class="list-group list-cust card-head">
                <h5 class="list-group-item active">Подкатегории</h5>
                <div class="col-lg-12 card-body">@* TODO: Добавились теги привести к единому выводу у всех *@
                    @foreach (var element in Model.Ccategories)
                    {
                        <div class="col-lg-3">
                            <div class="thumbnail">

                                <div class="caption">
                                    <h7>@element.TEXT</h7>
                                    @Html.DisplayActionLincImage("List", "Catalog", element.PK_ID, new { src = element.IMAGE_PATH, @class = "img-thumbnail img-responsive center-block", alt = "Responsive image" })
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
   
    </div>
}

@if (Model.Rstocks.Any())
{
    <div class="row">
        <div class="col-lg-12">@* TODO: Вот это добавилось *@
            <div class="list-group list-cust card-head">
                <h5 class="list-group-item active">Товары</h5>
                <div class="col-lg-12 card-body">
                    @foreach (var element in Model.Rstocks)
                    {
                        <div class="col-lg-3">
                            <div class="thumbnail">

                                <div class="caption">
                                    <h7>@element.NAME</h7>
                                    @Html.DisplayActionLincImage("Details", "Stock", element.PK_ID, new { src = element.IMAGE_PATH, @class = "img-thumbnail img-responsive center-block", alt = "Responsive image" })
                                    <h7>@element.PRICE_ONE_Round руб.</h7>
                                    <h7>
                                        @Html.ActionLink("В корзину", "AddedToBasket", "Stock", new { id = element.PK_ID }, new { @class = "btn btn-primary btn-xs" })
                                    </h7>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
}


