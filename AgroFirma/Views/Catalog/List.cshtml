@using AgroFirma.Component.Helpers
@model Model.Infrastructure.CategoryModel
@{
    ViewBag.Title = "Категория";
    ViewBag.ListGroupTitle = ViewBag.CategoryTitle;
}

@if (Model.Ccategories.Any())
{

    <div class="list-group list-group-custom">
        <div class="list-group-item active">Подкатегории</div>
        <div class="list-group-item">
            <div class="row">
                <div class="col-lg-12">
                    @foreach (var element in Model.Ccategories)
                    {
                        <div class="col-lg-3">
                            <div class="thumbnail thumbnail-castom">
                                <div class="caption">
                                    <p class="thumbnail-castom-head">@element.TEXT</p>
                                    <p>
                                        @Html.DisplayActionLincImage("List", "Catalog", element.PK_ID, new { src = element.IMAGE_PATH, @class = "img-thumbnail img-responsive center-block", alt = "Responsive image" })
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

}

<div class="list-group list-group-custom">
    <div class="list-group-item active">Товары</div>
    <div class="list-group-item">
        <div class="row">
            <div class="col-lg-12">

                @if (Model.Rstocks.Any())
                {

                    foreach (var element in Model.Rstocks)
                     {
                         <div class="col-lg-3">
                             <div class="thumbnail thumbnail-castom">
                                 <div class="caption">
                                     <p class="thumbnail-castom-head">@element.NAME</p>
                                     <p>
                                         @Html.DisplayActionLincImage("Details", "Stock", element.PK_ID, new { src = element.IMAGE_PATH, @class = "img-thumbnail img-responsive center-block", alt = "Responsive image" })
                                     </p>
                                     <p class="thumbnail-castom-text-right">@element.PRICE_ONE_Round руб.</p>
                                 </div>
                             </div>
                         </div>
                     }

                }
                else
                {
                    <p>Товаров нет</p>
                }

            </div>
        </div>
    </div>
</div>